{
    parserOptions: {
        ecmaVersion: 6,
        sourceType: "module"
    },
    env: {
      node: true,
      es6: true,
      mocha: true
    },
    extends: "eslint:recommended",

    rules: {
      prefer-const: 2,
      curly: "error",
      max-lines: ["warn",{
        max: 400,
        skipComments: true,
        skipBlankLines: true
      }],
      max-len: ["warn", {
        code: 120,
        ignoreComments: true,
      }],
      comma-spacing: [ "error", {
       before: false,
       after: true
      }],
      space-before-blocks: "error",
      space-before-function-paren: "error",
      comma-style: ["error", "last"],
      indent: ["error", 2],
      key-spacing: ["error", {
        "beforeColon": false,
        "afterColon": true
      }],
      eqeqeq: ["error", "smart"]
    }
}
